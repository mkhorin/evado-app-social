<template id="album">
  <div class="page">

    <breadcrumbs>
      <template #path>
        <li class="breadcrumb-item">
          <a @click.prevent="toMain" href="#" data-t="">Main</a>
        </li>
        <li class="breadcrumb-item">
          <a @click.prevent="toMember(member)" href="#" data-t="">Member</a>
        </li>
        <li class="breadcrumb-item" data-t="">Album</li>
      </template>
    </breadcrumbs>

    <div class="loadable-container">
      <template v-show="!loading">

        <h1>{{name}}</h1>
        <h4>{{description}}</h4>

        <tabs :items="['Photos', 'Comments']">
          <template #0>
            <photos :album="album"></photos>
          </template>
          <template #1>
            <comments-album :album="album"></comments-album>
          </template>
        </tabs>

      </template>

      <div v-show="loading" class="loader">
        <i class="fa fa-spinner fa-spin"></i>
      </div>
    </div>
  </div>
</template>