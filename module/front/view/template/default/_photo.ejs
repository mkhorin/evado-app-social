<template id="photo">
  <div class="page">
    <div class="loadable-container">
      <template v-if="!loading && id">

        <breadcrumbs>
          <template #path>
            <li class="breadcrumb-item">
              <a @click.prevent="toMain" href="#" data-t="">Main</a>
            </li>
            <li class="breadcrumb-item">
              <a @click.prevent="toMember(member)" href="#" data-t="">Member</a>
            </li>
            <li class="breadcrumb-item">
              <a @click.prevent="toAlbum(album)" href="#" data-t="">Album</a>
            </li>
            <li class="breadcrumb-item" data-t="">Photo</li>
          </template>
        </breadcrumbs>

        <img :src="thumbnail" class="mx-auto img-thumbnail img-fluid" :alt="name">

        <h1>{{name}}</h1>
        <h5>{{text}}</h5>

        <div class="block mt-4">
          <h4 class="block-title" data-t="">Photo comments</h4>
          <comments-photo :photo="photo"></comments-photo>
        </div>
      </template>

      <div v-if="loading" class="loader">
        <i class="fa fa-spinner fa-spin"></i>
      </div>
    </div>
  </div>
</template>