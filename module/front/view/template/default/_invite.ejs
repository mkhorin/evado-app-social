<div class="invite-modal modal" tabindex="-1" role="dialog" data-handler="Invite">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" data-t="">Invite to friends</h4>
            </div>
            <div class="modal-body">
                <div class="modal-error alert-danger alert hidden"></div>
                <div class="form-horizontal form" data-handler="Form">
                    <div class="form-attr form-group">
                        <label class="col-md-3 control-label" data-t="">Text</label>
                        <div class="col-md-9">
                            <textarea name="text" class="form-control" rows="4" autofocus></textarea>
                            <div class="error-block"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-success btn" data-command="send">
                    <span data-t="">Send</span>
                </button>
                <button class="btn-default btn" data-dismiss="modal">
                    <span data-t="">Close</span>
                </button>
            </div>
        </div>
    </div>
</div>